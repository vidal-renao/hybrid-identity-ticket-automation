{
  "title": "IT Support Request",
  "description": "Submit an IT support request. Your ticket will be routed automatically to the appropriate IT team.",
  "questions": [
    {
      "id": "FullName",
      "type": "Text",
      "title": "Full Name",
      "required": true
    },
    {
      "id": "WorkEmail",
      "type": "Text",
      "title": "Work Email",
      "required": true
    },
    {
      "id": "Department",
      "type": "Choice",
      "title": "Department",
      "options": ["HR", "Finance", "IT", "Operations", "Sales", "Warehouse"],
      "required": true,
      "multipleSelection": false
    },
    {
      "id": "RequestType",
      "type": "Choice",
      "title": "Request Category",
      "options": ["Hardware", "Software", "Network", "Other"],
      "required": true,
      "multipleSelection": false
    },
    {
      "id": "IssueSummary",
      "type": "Text",
      "title": "Issue Summary",
      "required": true
    },
    {
      "id": "DetailedDescription",
      "type": "TextLong",
      "title": "Detailed Description",
      "required": true
    },
    {
      "id": "Priority",
      "type": "Choice",
      "title": "Priority",
      "options": ["High", "Medium", "Low"],
      "required": true,
      "multipleSelection": false
    },
    {
      "id": "RequiredByDate",
      "type": "Date",
      "title": "Required by Date",
      "required": false
    },
    {
      "id": "Attachment",
      "type": "FileUpload",
      "title": "Attachment (optional)",
      "required": false
    }
  ]
}
